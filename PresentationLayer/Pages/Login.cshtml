@page
@model PresentationLayer.Pages.LoginModel
@{
}

<div class="container-fluid">
    <div class="row">
        <h1>
            Please log in here
        </h1>
    </div>
    <div class="row">
        Enter your detail below.
    </div>
    <form method="post" >
        <div class="form-group row">
            <label asp-for="Username" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="Username" type="text" class="form-control" id="inputEmail3" placeholder="Email">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" id="inputPassword3" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        @Html.ValidationSummary()
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </div>
    </form>
</div>

